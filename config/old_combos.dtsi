#define COMBO(NAME, BINDINGS, KEYPOS, LAYERS, TERM) \
        combo_##NAME { \
            timeout-ms = <TERM>; \
            bindings = <BINDINGS>; \
            key-positions = <KEYPOS>; \
            layers = <LAYERS>; \
        };

/ {
    combos {
        compatible = "zmk,combos";

COMBO(colon,  &kp COLON,      6  7, BASE, 40)
COMBO(lpar,   &kp LPAR,      12 13, BASE, 40)
COMBO(rpar,   &kp RPAR,      16 17, BASE, 40)
COMBO(lbkt,   &kp LBKT,      11 12, BASE, 40)
COMBO(rbkt,   &kp RBKT,      17 18, BASE, 40)
COMBO(lbrc,   &kp LBRC,      10 11, BASE, 40)
COMBO(rbrc,   &kp RBRC,      18 19, BASE, 40)
//COMBO(tab,    &kp TAB,       11 13, BASE, 40)
//COMBO(bspc,   &kp BSPC,      16 18, BASE, 40)
//COMBO(grave,  &kp GRAVE,     22 23, BASE, 40)
//COMBO(tilde,  &kp TILDE,     21 22, BASE, 40)
COMBO(bslh,   &kp BSLH,      22 23, BASE, 40)
COMBO(pipe,   &kp PIPE,      21 22, BASE, 40)
COMBO(ae,     &kp LC(LA(Q)), 26 27, BASE, 40)
COMBO(oe,     &kp LC(LA(L)), 27 28, BASE, 40)
COMBO(aa,     &kp LC(LA(W)), 28 29, BASE, 40)
COMBO(exit,   &kp LA(F4),     0  1, BASE, 40)
COMBO(capswd, &caps_word,    13 16, BASE, 60)

    };
};
